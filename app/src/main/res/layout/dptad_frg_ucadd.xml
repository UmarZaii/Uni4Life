<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spnSemesterID"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/edtUCID"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edtUCID"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="User Class ID"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edtUCName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="User Class Name"
        android:layout_below="@+id/edtUCID"
        android:layout_alignLeft="@+id/edtUCID"
        android:layout_alignStart="@+id/edtUCID" />

    <Button
        android:id="@+id/btnAddUC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="ADD USER CLASS"
        android:layout_below="@+id/edtUCName"
        android:layout_centerHorizontal="true" />

</RelativeLayout>